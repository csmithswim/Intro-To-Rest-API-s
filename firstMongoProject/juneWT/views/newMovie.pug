html
    title Add Movie To Database

    style.
        body {
            background-color: black;
            color: white;
            text-align: center;
            justify-content: center;
        }
        #newMovieForm {
            margin-left: 30%;
            margin-right: 30%;
            background-color: #333;
            display: flex;
            flex-direction: column;

            border-radius: 10px;
        }

        input {
            text-align: center;
            color: white;
            background: #222;
            border: none;
            font-size: larger;
            border-radius: 10px;
            margin-bottom: 2%;
            margin-left: 30%;
            margin-right: 30%;
        }

    script
        include ../public/new-mov.js
    -// Link to CSS & JS

    body   
        form#newMovieForm
            input(placeholder='Enter Movie Title', name='title')
            input(placeholder='Enter Movie Poster Img Link', name='img', type='url')
            input(placeholder='Enter IMDB Link', name='imdb_link', type='url')
            input(placeholder='Enter Movie Release Year', name='release', type='number', min=1900, max=new Date().getFullYear()+1)
            input(placeholder='Enter Movie Order Quantity', type='number', min=0, name='available')
        button#submitMovie Add Movie To DB